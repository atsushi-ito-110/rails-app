<div class="tweet">
  <div class="user clearfix">
    <%= link_to user_path(tweet.user_id, user_id: tweet.user_id), title: "ユーザ画面" do %>
      <%= attachment_image_tag tweet.user, :profile_image, :fill, 30, 30, class: "profile-image", format: 'jpeg', fallback: "no_image.png", size: "30x30" %>
      <span><%= tweet.user.name %></span>
    <% end %>
    <span class="time"><%= tweet.created_at.strftime("%Y-%m-%d %H:%M") %></span>
  </div>
  <div class="tweet-content clearfix">
    <%= simple_format(tweet.content) %>
    <div class="tweet_images">
      <% tweet.tweet_images.each do |tweet_image| %>
        <div class="tweet_image">
          <%= attachment_image_tag tweet_image, :image, :fill, 120, 120, format: 'jpeg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
