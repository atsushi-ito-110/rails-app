<div class="main-container">
  <div class="main-container-title">
    <h2>ログイン</h2>
  </div>
  <div class="main-fields">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="control has-icons-left">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",class: "input #{'is-danger' unless resource.errors.messages[:email].empty?}" %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <div class="control has-icons-left">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "input #{'is-danger' unless resource.errors.messages[:password].empty?}" %>
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "button is-primary main-botton" %>
      </div>
    <% end %>
  </div>

  <%= render "users/shared/links" %>
</div>